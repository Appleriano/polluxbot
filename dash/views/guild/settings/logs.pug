              li.level
                p=translation.website.usrPhoto || "User Photo Changed"
                input(type="checkbox")

              li.level
                p=translation.website.usrNick || "User Name or Nick Changed"
                input(type="checkbox")

              li.level
                p=translation.website.usrRoles || "User Roles Updated"
                input(type="checkbox")

              li.level
                p=translation.website.newChan || "Channel Created"
                input(type="checkbox")

              li.level
                p=translation.website.delChan || "Channel Deleted"
                input(type="checkbox")

              li.level
                p=translation.website.newRole || "Role Created"
                input(type="checkbox")

              li.level
                p=translation.website.uptRole || "Role Updated"
                input(type="checkbox")

              li.level
                p=translation.website.revokeBan || "Ban Revoked"
                input(type="checkbox")

              li.level
