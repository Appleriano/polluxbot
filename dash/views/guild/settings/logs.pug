              li.level
                p=translation.website.usrBan || "User Banned"
                input(type="checkbox")

              li.level
                p=translation.website.usrMute || "User Muted"
                input(type="checkbox")

              li.level
                p=translation.website.usrUnmute || "User Unmuted"
