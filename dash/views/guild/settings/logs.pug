.message.is-small.fullheight
  .message-header(style="z-index:9"): b Activity Logging Options
  .message-body.nano: .nano-content

    .container.is-fluid: .columns.is-marginless

      .column
        .message.is-small.is-success
          .message-header
            p=translation.website.activity ||  "Activity"
          .message-body
            ul
              li.level
                p=translation.website.userJoin || "User Joins Server"
                input(type="checkbox")

              li.level
                p=translation.website.userLeave || "User Leaves Server"
                input(type="checkbox")

              li.level
                p=translation.website.messDel || "Message Deleted"
                input(type="checkbox")

              li.level
                p=translation.website.messEdit || "Message Edited"
                input(type="checkbox")



